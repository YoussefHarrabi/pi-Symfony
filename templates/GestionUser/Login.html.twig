{# templates/login.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Sign In - Smart Scape{% endblock %}

{% block body %}
<div class="container d-flex align-items-center justify-content-center vh-100">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-10">
            <div class="card">
                <div class="card-header bg-primary">
                    <div class="app-brand">
                        <a href="/index.html">
                            <svg class="brand-icon" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid" width="30" height="33"
                                viewBox="0 0 30 33">
                                <!-- SVG content -->
                            </svg>
                            <span class="brand-name">Smart Scapkjkkkkkkkkkkkke</span>
                        </a>
                    </div>
                </div>

                <div class="card-body p-5">
                    <h4 class="text-dark mb-5">Sign In</h4>
                    {% if error %}
                    <div class="alert alert-danger" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                    {% endif %}

                    <form action="{{ path('app_login') }}" method="post">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="form-group col-md-12 mb-4">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control input-lg', 'placeholder': 'Email'}}) }}
                            </div>
                            <div class="form-group col-md-12 ">
                                {{ form_widget(form.password, {'attr': {'class': 'form-control input-lg', 'placeholder': 'Password'}}) }}
                            </div>
                            <!-- Other form fields and buttons -->
                        </div>
                        {{ form_end(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
