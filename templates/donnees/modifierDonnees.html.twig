{% extends 'base.html.twig' %}

{% block title %}Modifier les Données - Sleek Admin Dashboard Template{% endblock %}

{% block content %}
<div class="container d-flex align-items-center justify-content-center vh-100">
  <div class="row justify-content-center">
    <div class="col-lg-6 col-md-10">
      <div class="card">
        <div class="card-header bg-primary">
          <div class="app-brand">
            <a href="/index.html">
              <svg class="brand-icon" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid" width="30" height="33"
                viewBox="0 0 30 33">
                <g fill="none" fill-rule="evenodd">
                  <path class="logo-fill-blue" fill="#7DBCFF" d="M0 4v25l8 4V0zM22 4v25l8 4V0z" />
                  <path class="logo-fill-white" fill="#FFF" d="M11 4v25l8 4V0z" />
                </g>
              </svg>
              <span class="brand-name">Smart Scape</span>
            </a>
          </div>
        </div>

        <div class="card-body p-5">
        <div class="text-center mb-4"> {# Ajout de la classe text-center pour centrer le contenu horizontalement #}
          <img src="{{ asset('images/donnee.png') }}" alt="donnee" style="width: 100px; height: auto;">
        </div>
          <h4 class="text-dark mb-5">Modifier les Données</h4>
          {# Affichage des messages flash d'erreur #}
          {% for type, messages in app.flashes %}
              {% if type == 'error' and 'Ce nom de capteur est déjà utilisé. Veuillez choisir un autre nom.' in messages %}
                  <div class="alert alert-danger" role="alert">
                      {{ messages[0] }}
                  </div>
              {% endif %}
          {% endfor %}
          <form action="{{ path('app_modifierDonnees', {'id': donneeHistorique.id}) }}" method="post">
            {{ form_start(f) }}
            <div class="row">
              <div class="form-group col-md-12 mb-4">
                {{ form_label(f.niveauEmbouteillage) }}
                {{ form_widget(f.niveauEmbouteillage, {'attr': {'class': 'form-control input-lg'}}) }}
              </div>
              <div class="form-group col-md-12 mb-4">
                {{ form_label(f.alerte) }}
                {{ form_widget(f.alerte, {'attr': {'class': 'form-control input-lg'}}) }}
              </div>
              <div class="col-md-12">
                <button type="submit" class="btn btn-lg btn-primary btn-block mb-4">Modifier</button>
              </div>
            </div>
            {{ form_end(f) }}
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
