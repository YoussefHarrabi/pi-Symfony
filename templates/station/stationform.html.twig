


{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-6">
            <div class="card card-default">
                <div class="card-header card-header-border-bottom">
                    <h2>Add Commun mean</h2>
                </div>

                <div class="card-body">
                {{ form_start(formA, {'attr': {'class': 'requires-validation', 'novalidate': true}}) }}
                <div class="form-group">
                 {{ form_label(formA.name, 'Name', {'label_attr': {'class': 'formA-label'}}) }}
                                        {{ form_widget(formA.name, {'attr': {'class': 'formA-control', 'placeholder': 'Enter station name','required':true}}) }}
                                        {% if form_errors(formA.name) %}
                                        <div class="alert alert-danger">{{ form_errors(formA.name) }}</div>
                                    {% endif %}
                    
                        </div>

                        <div class="form-group">
                        {{ form_label(formA.address, 'Address', {'label_attr': {'class': 'formA-label'}}) }}
                                        {{ form_widget(formA.address, {'attr': {'class': 'formA-control', 'placeholder': 'Enter station adress','required':true}}) }}
                                         {% if form_errors(formA.address) %}
                                        <div class="alert alert-danger">{{ form_errors(formA.address) }}</div>
                                    {% endif %}
                             
                        </div>

                        <div class="form-footer pt-4 pt-5 mt-4 border-top">
                            <button type="submit" class="btn btn-primary">Add</button>
                    
                        </div>
                    {{ form_end(formA) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

