{% extends 'base.html.twig' %}

{% block title %}Hello WorkController!{% endblock %}

{% block content %}
<body>
    <h1>Work Information</h1>
    
    {# Zone de saisie de recherche en temps réel #}
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Search by location..." id="searchInput">
    </div>

    {# Affichage des résultats de la recherche #}
    <div id="searchResults">
        <!-- Les résultats de la recherche seront affichés ici -->
    </div>

    <div class="card-body">
        <div class="basic-data-table">
            <table id="basic-data-table" class="table nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>Work ID</th>
                        <th>Location</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Description</th>
                        <th>Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for work in works %}
                        <tr>
                            <td>{{ work.getWorkid() }}</td>
                            <td>{{ work.getLocation() }}</td>
                            <td>{{ work.getStartdate() ? work.getStartdate()|date('Y-m-d') : '' }}</td>
                            <td>{{ work.getEnddate() ? work.getEnddate()|date('Y-m-d') : '' }}</td>
                            <td>{{ work.getDescription() }}</td>
                            <td>{{ work.isIsactive() ? 'Yes' : 'No' }}</td>
                            <td>
                                <a href="{{ path('work_update', {'id': work.getWorkid()}) }}" class="btn btn-primary">Update</a>
                                <a href="{{ path('work_new') }}" class="btn btn-success">Add</a>  
                                <form id="delete-form-{{ work.getWorkid() }}" action="{{ path('work_delete', {'id': work.getWorkid()}) }}" method="POST" style="display: inline;">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ work.getWorkid()) }}">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                                </form>
                            </td>
                        </tr>

                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
     {% if works.totalItemCount > works.getItemNumberPerPage() %}
        <div class="pagination">
            {{ knp_pagination_render(works) }}
        </div>
    {% endif %}

    <div class="mt-3">
        <a href="{{ path('app_equipe') }}" class="btn btn-primary">Aller à la liste des équipes</a>
    </div>
</body>

<script>
    // Fonction pour gérer la recherche en temps réel
    document.getElementById('searchInput').addEventListener('input', function() {
        let keyword = this.value.trim();

        // Effectuer une requête AJAX pour récupérer les résultats de recherche

        if (keyword.length > 0) {
            fetch('{{ path('work_search') }}?location=' + keyword)
                .then(response => response.text())
                .then(data => {
                    document.getElementById('searchResults').innerHTML = data;
                });
        } else {
            document.getElementById('searchResults').innerHTML = '';
        }
    });
</script>
 
{% endblock %}
