{% extends 'base.html.twig' %}

{% block title %}New Incident{% endblock %}

{% block content %}
<div class="text-center">
    <div class="d-inline-block p-4 border rounded" style="width: 600px;">
        <h3>Add Incident</h3>
        <p>Fill in the data below.</p>
        <form class="requires-validation" novalidate action="{{ path('incident_new') }}" method="post">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="form-group">
                <label for="type">Type</label>
                {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'Type', 'required': true}}) }}
                {% if form_errors(form.type) %}
                    <span class="text-danger">{{ form_errors(form.type) }}</span>
                {% endif %}
            </div>
            <div class="form-group">
                <label for="place">Place</label>
                {{ form_widget(form.place, {'attr': {'class': 'form-control', 'placeholder': 'Place', 'required': true}}) }}
                {% if form_errors(form.place) %}
                    <span class="text-danger">{{ form_errors(form.place) }}</span>
                {% endif %}
            </div>
           <div class="form-group">
                <label for="hour">Hour</label>
                {{ form_widget(form.hour, {'attr': {'class': 'form-control', 'placeholder': 'Hour', 'type': 'time', 'required': true}}) }}
                {% if form_errors(form.hour) %}
                    <span class="text-danger">{{ form_errors(form.hour) }}</span>
                {% endif %}
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description', 'required': true}}) }}
                {% if form_errors(form.description) %}
                    <span class="text-danger">{{ form_errors(form.description) }}</span>
                {% endif %}
            </div>
           
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg" style="margin-top: 10px;"><i class="fas fa-plus"></i> Add</button>
            </div>
            {{ form_end(form) }}
        </form>
        <a href="{{ path('app_incident_index2') }}" class="btn btn-link">Back to List</a>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Get the hour input element
            const hourInput = document.getElementById('hour');

            // Check if the hour input element exists
            if (hourInput) {
                // Get the current date and time
                const now = new Date();
                const currentHour = now.getHours();
                const currentMinute = now.getMinutes();

                // Calculate the maximum time in HH:mm format
                const maxTime = `${currentHour.toString().padStart(2, '0')}:${currentMinute.toString().padStart(2, '0')}`;

                // Set the max attribute of the hour input to the current time
                hourInput.setAttribute('max', maxTime);

                // Log the max time for debugging
                console.log('Max time set:', maxTime);
            } else {
                console.error('Hour input element not found.');
            }
        });
        </script>
{% endblock %}
