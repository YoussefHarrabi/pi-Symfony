{% block title %}Rides List{% endblock %}
{% extends 'base.html.twig' %}
{% block content %}
    <div class="container">
        <h1 class="my-4 text-center">Rides List</h1>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Driver</th>
                        <th scope="col">Ratings</th>
                        <th scope="col">Reports</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ride in rides %}
                        <tr>
                            <td>{{ ride.driver }}</td>
                            <td>{{ ride.rating }}</td>
                            <td>
                                {% if ride.reports %}
                                    <ul>
                                        {% for report in ride.reports %}
                                            <li>{{ report }}</li>
                                        {% endfor %}
                                    </ul>
                                {% else %}
                                    No reports
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('ride_delete', {'id': ride.id}) }}" class="btn btn-danger">Delete</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <div class="container mt-5">
        <h2 class="text-center">Drivers with More Than 5 Reports</h2>
        <div class="row">
            {% for driverData in driversWithTotalReportsGreaterThanFive %}
                <div class="col-sm-4">
                    <div class="card mb-3">
                        <div class="card-body">
                            <h5 class="card-title">{{ driverData.driver }}</h5>
                            <p class="card-text">Total Reports: {{ driverData.totalReports }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
 