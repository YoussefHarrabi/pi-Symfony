{% extends 'baseModerna.html.twig' %}

{% block content %}
    <div class="container">
        <h1 class="my-4 text-center">Rides List</h1>
        {% if highestRatedDriver is not null %}
            <div class="highest-rated-card text-center">
                <h2><span class="medal-icon">&#127942;</span>Highest Rated Driver: {{ highestRatedDriver }}</h2>
                <h3>Average Rating: {{ highestRating }}</h3>
            </div>
        {% endif %}
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Driver</th>
                        <th scope="col">Start Location</th>
                        <th scope="col">End Location</th>
                        <th scope="col">Departure Time</th>
                        <th scope="col">Available Seats</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for ride in rides %}
                        <tr>
                            <td>{{ ride.driver }}</td>
                            <td>{{ ride.startLocation }}</td>
                            <td>{{ ride.endLocation }}</td>
                            <td>{{ ride.departureTime|date('Y-m-d H:i') }}</td>
                            <td>{{ ride.availableSeats }}</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="{{ path('ride_update', {'id': ride.id}) }}" class="btn btn-primary">Update</a>
                                    <a href="{{ path('ride_delete', {'id': ride.id}) }}" class="btn btn-danger">Delete</a>
                                    <a href="{{ path('ride_rate', {'id': ride.id}) }}" class="btn btn-info">Rate</a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
                    {{ knp_pagination_render(rides) }}

            </table>
        </div>
        <a href="{{ path('ride_add') }}" class="btn btn-success">Add Ride</a>
        
        <!-- Button to go to chat_bot/index.html.twig -->
        <a href="{{ path('app_chat_bot') }}" class="btn btn-primary">Go to Chat Bot</a>
    </div>
{% endblock %}
