{# security/login.html.twig #}


{% if app.flashes('error') is not empty %}
    <div class="alert alert-danger">
        {% for message in app.flashes('error') %}
            {{ message }}
        {% endfor %}
    </div>
{% endif %}

<form method="post">
    {{ form_start(form) }}
    <label for="email">Email</label>
    <input type="email" id="email" name="email" class="form-control input-lg" value="{{ last_username }}" required autofocus>
</div>
<div class="form-group col-md-12 ">
    <label for="password">Password</label>
    <input type="password" id="password" name="_password" class="form-control input-lg" required>
</div>
{{ form_row(form.recaptcha) }} 
{# must be the same name of this put on the FormBuilder #}

{{ form_errors(form.recaptcha) }}

    {{ form_row(form._remember_me) }}
    <button type="submit" class="btn btn-lg btn-primary btn-block mb-4">Login</button>
    {{ form_end(form) }}

    <p>Don't have an account yet? <a class="text-blue" href="{{ path('user_register') }}">Sign Up</a></p>
</form>
