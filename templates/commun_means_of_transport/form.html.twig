{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-6">
            <div class="card card-default">
                <div class="card-header card-header-border-bottom">
                    <h2>Add Commun mean</h2>
                </div>

                <div class="card-body">
                     {{ form_start(formA, {'attr': {'class': 'requires-validation', 'novalidate': true}}) }}
                         <div class="form-group">
                              {{ form_label(formA.registrationNumber, 'Registration Number', {'label_attr': {'class': 'formA-label'}}) }}
                                        {{ form_widget(formA.registrationNumber, {'attr': {'class': 'formA-control', 'placeholder': 'Enter number','required': true}}) }}
                                        {% if form_errors(formA.registrationNumber) %}
                                                <div class="alert alert-danger">{{ form_errors(formA.registrationNumber) }}</div>
                                    {% endif %}
                        </div>

                        <div class="form-group">
                               {{ form_label(formA.type, 'Type', {'label_attr': {'class': 'formA-label'}}) }}
                                        {{ form_widget(formA.type, {'attr': {'class': 'formA-control', 'placeholder': 'Enter type'}}) }}
                        </div>

                        <div class="form-footer pt-4 pt-5 mt-4 border-top">
                            <button type="submit" class="btn btn-primary">Add</button>
                    
                        </div>
                    {{ form_end(formA) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
